@page
@model ShopOnline.Pages.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center">@ViewData["Title"]</h2>

                    <div class="mb-3">
                        <label for="fullname" class="form-label">Full Name:</label>
                        <span id="fullname" class="form-text">@ViewData["FullName"]</span>
                    </div>

                    <div class="mb-3">
                        <label for="dob" class="form-label">Date of Birth:</label>
                        <span id="dob" class="form-text">@ViewData["DOB"]</span>
                    </div>

                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone:</label>
                        <span id="phone" class="form-text">@ViewData["Phone"]</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>