@page
@model ShopOnline.Pages.Authen.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h3>Login Form</h3>
@Model.Msg
<form method="post" asp-asp-page="Login">
    <table>
        <tr>
            <td>Usermame</td>
            <td><input type="text" asp-for="@Model.Username"/></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><input type="password" asp-for="@Model.Password" /></td>
        </tr>
        <tr>
            
            <td><input type="submit" value="Login" /></td>
        </tr>
    </table>
</form>
