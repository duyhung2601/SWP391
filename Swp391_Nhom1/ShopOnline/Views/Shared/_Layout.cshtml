<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ShopOnline</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/owlCarousel/dist/assets/owl.carousel.css" />
    <link rel="stylesheet" href="~/lib/owlCarousel/dist/assets/owl.theme.default.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.css" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css" />

    <script type="text/javascript">

        window.onload = load();

        function load() {
            $('.owl-one').owlCarousel({
                autoplay: true,
                loop: true,
                items: 1,
                nav: false,
                dotSpeed: 100,
            })

            
        }


    </script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ShopOnline</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link " asp-area="Admin" asp-controller="Order" asp-action="Index">Manage Order</a>
                        </li>
                        @if (User.IsInRole(Role.Role_Admin))
                        {


                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin Management
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index">Category</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="Index">Product</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Slider" asp-action="Index">Slider</a>
                                    </li>
        
                                    <li><hr class="dropdown-divider"></li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Create user</a>
                                    </li>
                                </ul>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link " asp-area="Customer" asp-controller="Cart" asp-action="Index">
                                Cart &nbsp;
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="footer p-5">
        <div class="responsive">
            <div class="footer-container">
                <div class="footer-container-content">
                    <div class="footer-container-content-list">
                        <div class="footer-container-content-list__heading1">
                            Contact Info
                        </div>
                        <div class="footer-container-content-list-text1">
                            <p>
                                Hà Nội: Xã An Thượng, H. Hoài Đức,
                                TP. Hà Nội
                                <br>
                                <br>
                                Hồ Chí Minh: Cảng Tân Cảng - Phú Hữu,
                                P. Phú Hữu, Quận 9, TP. Thủ Đức, TP. HCM
                                <br>
                                <br>
                                + Tell: <span>096.6711.955</span>
                                <br>
                                <br>
                                + Gmal: <span>Hotro@onlineshop.vn</span>
                            </p>
                        </div>
                    </div>
                    <div class="footer-container-content-list">
                        <div class="footer-container-content-list__heading">
                            About Online Shop
                        </div>
                        <div class="footer-container-content-list-text">
                            <p>Introduction</p>
                            <p>Hiring</p>
                            <p>Gallery</p>
                        </div>
                    </div>
                    <div class="footer-container-content-list">
                        <div class="footer-container-content-list__heading">
                            Products
                        </div>
                        <div class="footer-container-content-list-text">
                            <p>Rice Cake</p>
                            <p>Nest Slim</p>
                            <p>Sweet Cake</p>
                            <p>Soul Cake</p>
                            <p>Egg Cake</p>
                        </div>
                    </div>
                    <div class="footer-container-content-list">
                        <div class="footer-container-content-list__heading">
                            Policy
                        </div>
                        <div class="footer-container-content-list-text">
                            <p>Payment policy</p>
                            <p>Transportation policy</p>
                            <p>Selling policy</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/owlCarousel/dist/owl.carousel.min.js" />
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>