@model SliderVM
<form method="post" enctype="multipart/form-data">
    <input asp-for="Slider.Id" hidden />
    <input asp-for="Slider.ImageUrl" hidden />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> @(Model.Slider.Id != 0 ? "Update" : "Create") Slider</h2>
            <hr />

        </div>
        <div class="row">
            <div class="col-10">
                <div class="mb-3 row p-1">
                    <label asp-for="Slider.Name" class="p-0"></label>
                    <input asp-for="Slider.Name" class="form-control" />
                    <span asp-validation-for="Slider.Name" class="text-danger"></span>

                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Slider.Description" class="p-0"></label>
                    <input asp-for="Slider.Description" class="form-control" />


                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Slider.ImageUrl" class="p-0"> </label>
                    <input type="file" name="file" class="form-control" />
                    <span asp-validation-for="Slider.ImageUrl" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6">
                        @if (Model.Slider.Id == 0)
                        {
                            <button type="submit" class="btn btn-primary form-control">Create</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary form-control">Update</button>
                        }

                    </div>
                    <div class="col-6">
                        <a asp-controller="Slider" asp-action="Index" class="btn btn-secondary border form-control">
                            Back To List
                        </a>
                    </div>

                </div>

            </div>
            <div class="col-2">
                <img src="@Model.Slider.ImageUrl" width="100%"
                     style="border-radius:5px; border:1px solid" />
            </div>

        </div>






    </div>
</form>