@model List<Product>
<partial name="_Notification"/>


    <div class="container">
    <div class="row pt-4 pb-5">
            <div class="col-6">
                <h2 class="text-primary">Product List</h2>
            </div>
            <div class="col-6 text-end" >
                <a  asp-controller="Product" asp-action="Create" class="btn btn-primary">
                    Create New Product
                </a>

            </div>

        </div>
    </div>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
            <th>
                Product Name
            </th>
            <th>
                SKU
            </th>
            <th>
                Price
            </th>
            <th>
                Company
            </th>
            <th>
                Category
            </th>
            <th></th>
            
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.SKU
                </td>
                <td>
                    @obj.ListPrice
                </td>
                <td>
                    @obj.Company
                </td>
                <td>
                    
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id"  class="btn btn-primary mx-2">Edit</a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>