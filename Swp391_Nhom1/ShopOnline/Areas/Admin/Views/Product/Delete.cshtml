@model Product
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Delete Product</h2>
            <hr />

        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Name"  class="p-0"></label>
            <input asp-for="Name" disabled class="form-control" />
            

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Description"  class="p-0"></label>
            <input asp-for="Description" disabled class="form-control" />


        </div>
        <div class="mb-3 row p-1">
            <label asp-for="SKU"  class="p-0"></label>
            <input asp-for="SKU" disabled class="form-control" />
           

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Company"  class="p-0"></label>
            <input asp-for="Company" disabled class="form-control" />
           

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="ListPrice" class="p-0"> </label>
            <input asp-for="ListPrice" disabled class="form-control" />
           
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price"  class="p-0"> </label>
            <input asp-for="Price" disabled class="form-control" />
           
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price50"  class="p-0"> </label>
            <input asp-for="Price50" disabled class="form-control" />
            
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price100"  class="p-0"> </label>
            <input asp-for="Price100" disabled class="form-control" />
            
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">
                    Back To List
                </a>
            </div>

        </div>




    </div>
</form>